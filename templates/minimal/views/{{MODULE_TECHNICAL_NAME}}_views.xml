<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="{{MODULE_TECHNICAL_NAME}}_{{MODEL_NAME}}_view_list" model="ir.ui.view">
        <field name="name">{{MODULE_TECHNICAL_NAME}}.{{MODEL_NAME}}.view.list</field>
        <field name="model">{{MODULE_TECHNICAL_NAME}}.{{MODEL_NAME}}</field>
        <field name="arch" type="xml">
            <list string="{{MODULE_NAME}}">
                <field name="name"/>
                <field name="active"/>
                <field name="display_name"/>
            </list>
        </field>
    </record>

    <record id="{{MODULE_TECHNICAL_NAME}}_{{MODEL_NAME}}_view_form" model="ir.ui.view">
        <field name="name">{{MODULE_TECHNICAL_NAME}}.{{MODEL_NAME}}.view.form</field>
        <field name="model">{{MODULE_TECHNICAL_NAME}}.{{MODEL_NAME}}</field>
        <field name="arch" type="xml">
            <form string="{{MODULE_NAME}}">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_{{MODULE_TECHNICAL_NAME}}_{{MODEL_NAME}}" model="ir.actions.act_window">
        <field name="name">{{MODULE_NAME}}</field>
        <field name="res_model">{{MODULE_TECHNICAL_NAME}}.{{MODEL_NAME}}</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>