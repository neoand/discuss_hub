<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security groups definition -->
        <record id="group_template_user" model="res.groups">
            <field name="name">Template Module / User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_template_manager" model="res.groups">
            <field name="name">Template Module / Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_template_user'))]"/>
        </record>

        <!-- Record rules -->
        <record id="rule_template_model_user" model="ir.rule">
            <field name="name">Template: User access own records</field>
            <field name="model_id" ref="model_template_model"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_template_user'))]"/>
        </record>

        <record id="rule_template_model_manager" model="ir.rule">
            <field name="name">Template: Manager access all records</field>
            <field name="model_id" ref="model_template_model"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_template_manager'))]"/>
        </record>
    </data>
</odoo>