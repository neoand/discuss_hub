<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Demo Data for Template Module -->
    <record id="template_model_demo_1" model="template.model">
        <field name="name">Demo Record 1</field>
        <field name="description">This is a demo record for testing purposes.</field>
        <field name="date" eval="(DateTime.today()).strftime('%Y-%m-%d')"/>
        <field name="state">draft</field>
    </record>

    <record id="template_model_demo_2" model="template.model">
        <field name="name">Demo Record 2</field>
        <field name="description">This is another demo record for testing purposes.</field>
        <field name="date" eval="(DateTime.today() - timedelta(days=1)).strftime('%Y-%m-%d')"/>
        <field name="state">confirmed</field>
    </record>

    <record id="template_model_demo_3" model="template.model">
        <field name="name">Demo Record 3</field>
        <field name="description">This is a completed demo record for testing.</field>
        <field name="date" eval="(DateTime.today() - timedelta(days=7)).strftime('%Y-%m-%d')"/>
        <field name="state">done</field>
    </record>
</odoo>