<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to process webhook retry queue -->
        <record id="cron_process_webhook_queue" model="ir.cron">
            <field name="name">DiscussHub: Process Webhook Queue</field>
            <field name="model_id" ref="model_discuss_hub_webhook_manager"/>
            <field name="state">code</field>
            <field name="code">model.process_retry_queue()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron job to process pending batches -->
        <record id="cron_process_pending_batches" model="ir.cron">
            <field name="name">DiscussHub: Process Pending Batches</field>
            <field name="model_id" ref="model_discuss_hub_message_batch"/>
            <field name="state">code</field>
            <field name="code">model.process_pending_batches()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron job to process async tasks -->
        <record id="cron_process_async_tasks" model="ir.cron">
            <field name="name">DiscussHub: Process Async Tasks</field>
            <field name="model_id" ref="model_discuss_hub_async_task"/>
            <field name="state">code</field>
            <field name="code">model.process_pending_tasks()</field>
            <field name="interval_number">2</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron job to cleanup old webhook logs -->
        <record id="cron_cleanup_webhook_logs" model="ir.cron">
            <field name="name">DiscussHub: Cleanup Webhook Logs</field>
            <field name="model_id" ref="model_discuss_hub_webhook_log"/>
            <field name="state">code</field>
            <field name="code">model._gc_webhook_logs()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>