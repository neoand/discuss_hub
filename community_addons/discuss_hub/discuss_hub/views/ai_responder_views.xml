<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Responder List View - Odoo 18 Standard -->
    <record id="view_ai_responder_list" model="ir.ui.view">
        <field name="name">discuss_hub.ai_responder.view.list</field>
        <field name="model">discuss_hub.ai_responder</field>
        <field name="arch" type="xml">
            <list string="AI Responders" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="model" string="Gemini Model"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="confidence_threshold" widget="percentage"/>
                <field name="response_count"/>
                <field name="success_count"/>
                <field name="escalation_count"/>
                <field name="average_confidence" widget="percentage" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- AI Responder Form View - Odoo 18 Standard -->
    <record id="view_ai_responder_form" model="ir.ui.view">
        <field name="name">discuss_hub.ai_responder.view.form</field>
        <field name="model">discuss_hub.ai_responder</field>
        <field name="arch" type="xml">
            <form string="AI Responder">
                <header>
                    <button name="action_test_response"
                            string="Test AI Response"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <widget name="web_ribbon"
                            title="Archived"
                            bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Customer Service AI"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="sequence"/>
                            <field name="connector_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="model"/>
                            <field name="confidence_threshold" widget="percentage"/>
                            <field name="temperature"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Google Gemini Configuration" name="gemini_config">
                            <group>
                                <group string="API Configuration">
                                    <field name="api_key" password="True"
                                           placeholder="AIzaSy..."/>
                                    <field name="max_tokens"/>
                                </group>
                                <group string="Safety Settings">
                                    <field name="safety_harassment"/>
                                    <field name="safety_hate_speech"/>
                                </group>
                            </group>
                            <group string="System Instructions">
                                <field name="system_prompt"
                                       widget="text"
                                       nolabel="1"
                                       placeholder="Define AI assistant behavior and personality..."/>
                            </group>
                        </page>

                        <page string="Context &amp; History" name="context">
                            <group>
                                <field name="use_conversation_history"/>
                                <field name="history_messages_count"
                                       invisible="not use_conversation_history"/>
                            </group>
                            <separator string="How Context Works"/>
                            <div class="alert alert-info" role="alert">
                                When enabled, the AI will have access to the last N messages in the conversation,
                                allowing it to provide more contextual and relevant responses.
                            </div>
                        </page>

                        <page string="Statistics" name="statistics">
                            <group>
                                <group string="Response Metrics">
                                    <field name="response_count"/>
                                    <field name="success_count"/>
                                    <field name="escalation_count"/>
                                </group>
                                <group string="Performance">
                                    <field name="average_confidence" widget="percentage"/>
                                </group>
                            </group>
                            <div class="mt-3">
                                <button name="action_view_history"
                                        string="View Response History"
                                        type="object"
                                        class="btn-link"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Responder Kanban View - Odoo 18 Standard -->
    <record id="view_ai_responder_kanban" model="ir.ui.view">
        <field name="name">discuss_hub.ai_responder.view.kanban</field>
        <field name="model">discuss_hub.ai_responder</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="model"/>
                <field name="active"/>
                <field name="response_count"/>
                <field name="success_count"/>
                <field name="confidence_threshold"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <widget name="web_ribbon"
                                    title="Inactive"
                                    bg_color="text-bg-danger"
                                    invisible="active"/>

                            <div class="row">
                                <div class="col-12">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-6">
                                    <small>Model:</small><br/>
                                    <field name="model"/>
                                </div>
                                <div class="col-6">
                                    <small>Threshold:</small><br/>
                                    <field name="confidence_threshold" widget="percentage"/>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-12">
                                    <small>
                                        Responses: <field name="response_count"/> |
                                        Success: <field name="success_count"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View - Odoo 18 Standard -->
    <record id="view_ai_responder_search" model="ir.ui.view">
        <field name="name">discuss_hub.ai_responder.view.search</field>
        <field name="model">discuss_hub.ai_responder</field>
        <field name="arch" type="xml">
            <search string="AI Responders">
                <field name="name"/>
                <field name="model"/>
                <field name="connector_ids"/>
                <separator/>
                <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="High Success Rate" name="filter_high_success"
                        domain="[('success_count', '>', 10)]"/>
                <group expand="0" string="Group By">
                    <filter string="Gemini Model" name="group_model" context="{'group_by': 'model'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action - USE "list" NOT "tree" -->
    <record id="action_ai_responder" model="ir.actions.act_window">
        <field name="name">AI Responders</field>
        <field name="res_model">discuss_hub.ai_responder</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first AI Responder
            </p>
            <p>
                AI Responders use Google Gemini to automatically respond to customer messages
                with intelligent, context-aware replies.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ai_responder"
              name="AI Responders"
              parent="menu_discuss_hub_config"
              action="action_ai_responder"
              sequence="50"/>

</odoo>
