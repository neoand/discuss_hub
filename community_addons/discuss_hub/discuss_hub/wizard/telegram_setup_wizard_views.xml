<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Telegram Setup Wizard Form View - Odoo 18 Standard -->
    <record id="view_telegram_setup_wizard_form" model="ir.ui.view">
        <field name="name">discuss_hub.telegram_setup_wizard.view.form</field>
        <field name="model">discuss_hub.telegram_setup_wizard</field>
        <field name="arch" type="xml">
            <form string="Telegram Bot Setup Wizard">
                <field name="step" invisible="1"/>
                <field name="connector_id" invisible="1"/>

                <!-- Step 1: Introduction -->
                <group invisible="step != 'intro'">
                    <group colspan="2">
                        <div class="alert alert-primary" role="alert">
                            <h3>ðŸ¤– Setup Your Telegram Bot</h3>
                            <p>This wizard will help you integrate Telegram with DiscussHub in 4 easy steps.</p>
                        </div>
                    </group>
                    <group colspan="2">
                        <h4>What You'll Need:</h4>
                        <ul>
                            <li>Telegram account</li>
                            <li>Access to @BotFather</li>
                            <li>5 minutes of your time</li>
                        </ul>
                        <h4>What You'll Get:</h4>
                        <ul>
                            <li>Send/receive Telegram messages in Odoo</li>
                            <li>Automatic channel creation</li>
                            <li>Media support (photos, documents, audio)</li>
                            <li>Interactive buttons</li>
                        </ul>
                    </group>
                </group>

                <!-- Step 2: Bot Token -->
                <group invisible="step != 'bot_token'">
                    <group colspan="2">
                        <div class="alert alert-info" role="alert">
                            <h4>Get Your Bot Token</h4>
                            <p>Follow these steps in Telegram:</p>
                            <ol>
                                <li>Open Telegram and search for <strong>@BotFather</strong></li>
                                <li>Send command: <code>/newbot</code></li>
                                <li>Choose a name for your bot</li>
                                <li>Choose a username (must end in 'bot')</li>
                                <li>Copy the token provided (looks like: 123456:ABC-DEF...)</li>
                            </ol>
                        </div>
                    </group>
                    <group>
                        <field name="name" placeholder="My Telegram Bot"/>
                        <field name="bot_token" password="True" required="1"
                               placeholder="123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11"/>
                    </group>
                </group>

                <!-- Step 3: Webhook -->
                <group invisible="step != 'webhook'">
                    <group colspan="2">
                        <div class="alert alert-success" role="alert">
                            <h4>âœ… Bot Created Successfully!</h4>
                            <p>Configuring webhook to receive messages...</p>
                        </div>
                    </group>
                    <group>
                        <label for="webhook_url" string="Webhook URL"/>
                        <div>
                            <field name="webhook_url" readonly="1" class="font-monospace"/>
                            <small class="text-muted">This URL will receive Telegram updates</small>
                        </div>
                    </group>
                </group>

                <!-- Step 4: Test & Finish -->
                <group invisible="step != 'test'">
                    <group colspan="2">
                        <div class="alert alert-success" role="alert">
                            <h3>ðŸŽ‰ Setup Complete!</h3>
                            <p>Your Telegram bot is configured and ready to use.</p>
                        </div>
                    </group>
                    <group string="Bot Information">
                        <field name="bot_username" readonly="1"/>
                        <field name="bot_id" readonly="1"/>
                        <field name="webhook_configured" widget="boolean_toggle" readonly="1"/>
                    </group>
                    <group colspan="2">
                        <div class="alert alert-info" role="alert">
                            <h4>Next Steps:</h4>
                            <ol>
                                <li>Find your bot on Telegram: <strong>@<field name="bot_username" readonly="1" nolabel="1"/></strong></li>
                                <li>Send /start to your bot</li>
                                <li>Messages will appear in Odoo Discuss</li>
                            </ol>
                        </div>
                    </group>
                </group>

                <footer>
                    <button name="action_previous_step"
                            string="Previous"
                            type="object"
                            class="btn-secondary"
                            invisible="step in ['intro', 'test']"/>
                    <button name="action_next_step"
                            string="Next"
                            type="object"
                            class="btn-primary"
                            invisible="step == 'test'"/>
                    <button name="action_finish"
                            string="Open Telegram Connector"
                            type="object"
                            class="btn-success"
                            invisible="step != 'test'"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open Wizard -->
    <record id="action_telegram_setup_wizard" model="ir.actions.act_window">
        <field name="name">Telegram Setup Wizard</field>
        <field name="res_model">discuss_hub.telegram_setup_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
